        <% if @satellites %>
        <div id="satellites">
        <% @satellites.each do |s| %>
            <div class="satellite">

        <div class="col-md-4 text-center">
            <h4>Norad Id: <%= s.norad_id %> </h4> 
            <p><%= button_to "View This Satellite's Info", '/satellite', params: {:sat_id => s.norad_id}, method: :get, local: true %><p>
            <% msg_collector = [] %>
            <% if @message_count != nil %>
                <% @message_count.each do |msg| %>
                    <% if msg.satellite_id == s.id.to_i %>
                        <% msg_collector << msg %>
                    <% end %>
                <% end %>
            <% end %>
            <p><%= msg_collector.count %> Messages<p>
